@page "/epis"

<PageTitle>EPIs</PageTitle>

<h1>EPIs</h1>

<p role="status">Current count: @currentCount</p>
<AuthorizeView>
    <Authorized>
        <p>Autorizado @context.User.Identity.Name</p>
    </Authorized>
    <NotAuthorized>
        <p>nao Autorizado @context.User.Identity.Name</p>
    </NotAuthorized>
</AuthorizeView>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
